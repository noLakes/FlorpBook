<!DOCTYPE html>
<html>
  <head>
    <title>Florpbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash[:notice] %>
      <div class="flash_notifcation">
        <p class="good"><%= flash[:notice] %></p>
      </div>
    <% end %>

    <% if flash[:fail] %>
      <div class="flash_notification">
        <p class="bad"><%= flash[:fail] %></p>
      </div>
    <% end %>

  <table>
    <% if user_signed_in? %>
      <tr>
        <td><%= link_to  "Home", posts_path %></td>
        <td><%= link_to  "Notifications", notifications_path %></td>
        <td><%= link_to  current_user.name , user_path(current_user) %></td>
        <td><%= link_to  "Log Out", destroy_user_session_path, :method => :delete %></td>
      </tr>
    <% else %>
      <tr>
        <td><%= link_to  "Log In", new_user_session_path %></td>
        <td><%= link_to  "Sign Up", new_user_registration_path %></td>
      </tr>
    <% end %>
  </table>

    <%= yield %>
  </body>
</html>
