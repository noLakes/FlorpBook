<!DOCTYPE html>
<html>
  <head>
    <title>Florpbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <table>
    <% if user_signed_in? %>
      <tr>
        <td><%= link_to  "Home", posts_path %></td>
        <td><%= link_to  "Notifications", posts_path %></td>
        <td><%= link_to  "Profile", edit_user_registration_path %></td>
        <td><%= link_to  "Log Out", destroy_user_session_path, :method => :delete %></td>
      </tr>
    <% else %>
      <tr>
        <td><%= link_to  "Log In", new_user_session_path %></td>
        <td><%= link_to  "Sign Up", new_user_registration_path %></td>
      </tr>
    <% end %>
  </table>

    <%= yield %>
  </body>
</html>
