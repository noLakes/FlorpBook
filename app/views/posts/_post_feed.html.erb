
  <% @posts.each do |p| %>
    <div class="post">  
      <% if p.author.handle == "" %>
        <%= link_to  p.author.name,  user_path(p.author.id)%>
      <% else %>
        <%= link_to  p.author.handle, user_path(p.author.id) %>
      <% end %>
      </br>
      <%= p.body %></br>
      <%= link_to  "like", post_likes_path(p.id), method: :post %>
      <%= link_to  "comment", new_comment_path(post_id: p.id) %></br>
    </div>

      <% p.comments.each do |c| %>
        <div class="comment">  
          <% if c.author.handle == "" %>
            <%= link_to  c.author.name, user_path(c.author.id)%>
          <% else %>
            <%= link_to  c.author.handle, user_path(c.author.id) %>
          <% end %>
          </br>
          <%= c.body %>
          </br><%= link_to  "like", comment_likes_path(c.id), method: :post %>
        </div>
      <% end %>

    </br></br>
  <% end %>