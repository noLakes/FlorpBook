
      <div class="post">
        <%= image_tag  post.author.avatar.feed.url, class: 'feed_profile_pic' %>  
        <% if post.author.handle == "" %>
          <%= link_to  post.author.name,  user_path(post.author.id)%>
        <% else %>
          <%= link_to  post.author.handle, user_path(post.author.id) %>
        <% end %>
        <% unless post.image.url.nil? %>
          </br>
          <%= image_tag  post.image.feed.url, class: 'feed_post_image' %>
        <% end %>
        </br>
        <%= post.body %></br>
        <%= link_to  "comment", new_comment_path(post_id: post.id) %>
        <%= link_to  "like", post_likes_path(post.id), method: :post %>
        <% if !post.like_count.zero? %>
          <%= "+#{post.like_count}"%>
        <% end %>
      </div>

        <% post.comments.each do |c| %>
          <div class="comment">
            <%= image_tag  c.author.avatar.feed.url, class: 'comment_profile_pic' %>  
            <% if c.author.handle == "" %>
              <%= link_to  c.author.name, user_path(c.author.id)%>
            <% else %>
              <%= link_to  c.author.handle, user_path(c.author.id) %>
            <% end %>
            </br>
            <%= c.body %>
            </br><%= link_to  "like", comment_likes_path(c.id), method: :post %>
            <% if !c.like_count.zero? %>
              <%= "+#{c.like_count}"%>
            <% end %></br>
          </div>
        <% end %>
    </br></br>
