<h1><%= "#{@user.name}" %></h1>

<h3>Posts</h3>

<% @user.posts.each do |p| %>
  <div class="post">  
    <% if @user.handle == "" %>
      <%= @user.name %>
    <% else %>
      <%= @user.handle %>
    <% end %>
    </br>
    <%= p.body %>
    </br><%= link_to  "comment", new_comment_path(post_id: p.id) %>
  </div>

  <% p.comments.each do |c| %>
    <div class="comment">  
      <% if c.author.handle == "" %>
        <%= link_to  c.author.name,  user_path(c.author.id)%>
      <% else %>
        <%= link_to  c.author.handle, user_path(c.author.id) %>
      <% end %>
      </br>
      <%= c.body %>
    </div>
  <% end %>

   </br></br>
<% end %>
