<% if @notifications.length.zero?%>
  <em><%= "no notifications at the moment" %></em>
<% else %>
  <% @notifications.each do |note| %>
    
    <% if note.type == 'comment' %>
      <%= "someone commented on your " %>
      <%= link_to  "post", post_path(notification_source(note, 'comment')) %>
    <% end %>  

    <% if note.type == 'like-comment' %>
      <%= "someone liked your comment on this " %>
      <%= link_to  "post", post_path(notification_source(note, 'like-comment')) %>
    <% end %>

    <% if note.type == 'like-post' %>
      <%= "someone liked your " %>
      <%= link_to  "post", post_path(notification_source(note, 'like-post')) %>
    <% end %>  

    <% if note.type == 'friend_request' %>
      <% user = notification_source(note, 'friend_request').user %>
      <%= "#{user} sent you a friend request!"%>
    <% end %>  

    </br>
    #button logic here 
    <% if note.type == 'friend_request'%>
    #accept/decline buttons + destroy notification
    <% else %>
    #button that destroys notificaiton
    <% end %>
    </br>
  <% end %>
<% end %>